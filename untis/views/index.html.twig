{% endif %}

{% if halls is defined %}
  <h1>Pausenaufsichten</h1>
  {% if halls %}
    <table>
      <tr>
        {% for hall in halls %}
          <td>
            <a href="{{ app.url_generator.generate('hall', { hall: hall }) }}">{{ hall|e }}</a>
          </td>
        {% endfor %}
      </tr>
    </table>
  {% else %}
